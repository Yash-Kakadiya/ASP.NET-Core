<!DOCTYPE html>
<html>
<head>
    <title>Employee Detail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .employee-detail-label {
            font-weight: 600;
        }

        .employee-detail-value {
            word-break: break-all;
        }

        .status-active {
            color: #198754;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
                <i class="bi bi-person-circle fs-2 me-3"></i>
                <h4 class="mb-0">Employee Details</h4>
            </div>
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-hash"></i> Employee ID:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["EmployeeID"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-person"></i> Name:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["FirstName"] @Model["LastName"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-envelope"></i> Email:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["Email"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-phone"></i> Mobile No:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["PhoneNumber"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-calendar"></i> Date of Birth:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @(Model["DateOfBirth"] != DBNull.Value ? Convert.ToDateTime(Model["DateOfBirth"]).ToString("yyyy-MM-dd") : "-")
                    </dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-gender-ambiguous"></i> Gender:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["Gender"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-calendar-check"></i> Hire Date:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @(Model["HireDate"] != DBNull.Value ? Convert.ToDateTime(Model["HireDate"]).ToString("yyyy-MM-dd") : "-")
                    </dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-briefcase"></i> Job Title:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["JobTitle"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-building"></i> Department:</dt>
                    <dd class="col-sm-9 employee-detail-value">@Model["Department"]</dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-currency-dollar"></i> Salary:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @(Model["Salary"] != DBNull.Value ? Convert.ToDecimal(Model["Salary"]).ToString("C2") : "-")



                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-check-circle"></i> Status:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @if (isActive)
                        {
                            <span class="status-active"><i class="bi bi-toggle-on"></i> Active</span>
                        }
                        else
                        {
                            <span class="status-inactive"><i class="bi bi-toggle-off"></i> Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-calendar-plus"></i> Created At:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @(created.HasValue? created.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>

                    <dt class="col-sm-3 employee-detail-label"><i class="bi bi-calendar-check"></i> Updated At:</dt>
                    <dd class="col-sm-9 employee-detail-value">
                        @(updated.HasValue? updated.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a class="btn btn-secondary shadow-sm"
                           asp-controller="Employee" asp-action="EmployeeList"
                           title="Back to List">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-primary shadow-sm me-2"
                           asp-controller="Employee" asp-action="EmployeeAddEdit" asp-route-EmployeeID="@Model["EmployeeID"]"
                           title="Edit">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                        <a class="btn btn-danger shadow-sm"
                           asp-controller="Employee" asp-action="EmployeeDelete" asp-route-EmployeeID="@Model["EmployeeID"]"
                           onclick="return confirm('Are you sure you want to delete this employee?');"
                           title="Delete">
                            <i class="bx bx-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>