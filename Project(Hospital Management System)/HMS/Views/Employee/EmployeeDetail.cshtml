@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isActive = Model["IsActive"] != DBNull.Value && Convert.ToBoolean(Model["IsActive"]);
    DateTime? created = Model["CreatedAt"] != DBNull.Value ? Convert.ToDateTime(Model["CreatedAt"]) : (DateTime?)null;
    DateTime? updated = Model["UpdatedAt"] != DBNull.Value ? Convert.ToDateTime(Model["UpdatedAt"]) : (DateTime?)null;
}

