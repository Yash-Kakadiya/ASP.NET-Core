<!DOCTYPE html>
<html>
<head>
    <title>Employees List</title>
</head>
<body>

    <style>
        .clickable-row {
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            .clickable-row:hover {
                background-color: #f0f9ff !important;
            }
    </style>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">👥 Employee Management</h2>
            <a asp-action="EmployeeAddEdit" asp-controller="Employee" class="btn btn-success btn-lg shadow-sm">
                <i class="bx bx-plus me-1"></i> Add Employee
            </a>
        </div>

        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-gradient bg-primary text-white rounded-top-4">
                <h5 class="mb-0"><i class="bx bx-list-ul me-2"></i>Employee List</h5>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle mb-0 text-center">
                        <thead class="table-light text-dark">
                            <tr>
                                <th>ID</th>
                                <th>Employee Name</th>
                                <th>Email</th>
                                <th>Mobile No</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Rows.Count > 0)
                            {
                                foreach (DataRow row in Model.Rows)
                                {
                                    var employeeId = row["EmployeeID"];
                                    <tr class="clickable-row"
                                        onclick="window.location.href='@Url.Action("EmployeeDetail", "Employee", new { EmployeeID = employeeId })'">
                                        <td>@employeeId</td>
                                        <td class="fw-semibold text-capitalize">@row["FirstName"] @row["LastName"] </td>
                                        <td>@row["Email"]</td>
                                        <td>@row["PhoneNumber"]</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a class="btn btn-sm btn-info text-white shadow-sm" asp-controller="Employee" asp-action="EmployeeDetail" asp-route-EmployeeID="@employeeId"
                                                   title="Details"
                                                   title="View">
                                                    <i class="bx bx-show-alt me-1"></i>View
                                                </a>
                                                <a class="btn btn-sm btn-primary shadow-sm"
                                                   asp-controller="Employee" asp-action="EmployeeAddEdit" asp-route-EmployeeID="@employeeId"
                                                   title="Edit">
                                                    <i class="bx bx-edit-alt me-1"></i>Edit
                                                </a>
                                                <a class="btn btn-sm btn-danger shadow-sm"
                                                   asp-controller="Employee" asp-action="EmployeeDelete" asp-route-EmployeeID="@employeeId"
                                                   onclick="return confirm('Are you sure you want to delete this employee?');"
                                                   title="Delete">
                                                    <i class="bx bx-trash me-1"></i>Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-muted text-center py-4">
                                        <i class="bx bx-info-circle me-1"></i> No employees found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
</html>