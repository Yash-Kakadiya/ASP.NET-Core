@model DataRow
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isActive = Model["IsActive"] != DBNull.Value && Convert.ToBoolean(Model["IsActive"]);
    DateTime? created = Model["Created"] != DBNull.Value ? Convert.ToDateTime(Model["Created"]) : (DateTime?)null;
    DateTime? modified = Model["Modified"] != DBNull.Value ? Convert.ToDateTime(Model["Modified"]) : (DateTime?)null;
}

@* CREATE OR ALTER PROC PR_Patient_SelectByID
    @PatientID INT
AS
BEGIN
    SELECT P.PatientID, P.PatientName, P.Phone, P.Email, P.Address, P.DateOfBirth, P.Gender, P.City, P.State, P.IsActive, P.Created, P.Modified, U.UserID, U.UserName, U.Email, U.MobileNo
    FROM Patient AS P JOIN [User] AS U
        ON P.UserID = U.UserID
    WHERE PatientID = @PatientID;
END*@

<!DOCTYPE html>
<html>
<head>
    <title>Patient Detail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .patient-detail-label {
            font-weight: 600;
        }

        .patient-detail-value {
            word-break: break-all;
        }

        .status-active {
            color: #198754;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
                <i class="bi bi-person-wheelchair fs-2 me-3"></i>
                <h4 class="mb-0">Patient Details</h4>
            </div>
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-hash"></i> Patient ID:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["PatientID"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-person"></i> Name:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["PatientName"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-calendar"></i> Date of Birth:</dt>
                    <dd class="col-sm-9 patient-detail-value">
                        @(Model["DateOfBirth"] != DBNull.Value ? Convert.ToDateTime(Model["DateOfBirth"]).ToString("yyyy-MM-dd") : "-")
                    </dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-gender-ambiguous"></i> Gender:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["Gender"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-envelope"></i> Email:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["Email"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-phone"></i> Mobile No:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["Phone"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-house"></i> Address:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["Address"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-buildings"></i> City: </dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["City"]</dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-flag"></i> State:</dt>
                    <dd class="col-sm-9 patient-detail-value">@Model["State"]</dd>

                    <dd class="col-sm-3 doctor-detail-label"><i class="bi bi-person-bounding-box"></i> User Name:</dd>
                    <dd class="col-sm-9 doctor-detail-value">@Model["UserName"]</dd>
                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-check-circle"></i> Status:</dt>
                    <dd class="col-sm-9 patient-detail-value">
                        @if (isActive)
                        {
                            <span class="status-active"><i class="bi bi-toggle-on"></i> Active😊</span>
                        }
                        else
                        {
                            <span class="status-inactive"><i class="bi bi-toggle-off"></i> Inactive🥲</span>
                        }
                    </dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-calendar-plus"></i> Created:</dt>
                    <dd class="col-sm-9 patient-detail-value">
                        @(created.HasValue? created.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>

                    <dt class="col-sm-3 patient-detail-label"><i class="bi bi-calendar-check"></i> Updated At:</dt>
                    <dd class="col-sm-9 patient-detail-value">
                        @(modified.HasValue? modified.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a class="btn btn-secondary shadow-sm"
                           asp-controller="Patient" asp-action="PatientList"
                           title="Back to List">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-primary shadow-sm me-2"
                           asp-controller="Patient" asp-action="PatientAddEdit" asp-route-PatientID="@Model["PatientID"]"
                           title="Edit">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                        <a class="btn btn-danger shadow-sm"
                           asp-controller="Patient" asp-action="PatientDelete" asp-route-PatientID="@Model["PatientID"]"
                           onclick="return confirm('Are you sure you want to delete this patient?');"
                           title="Delete">
                            <i class="bx bx-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>