<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(Model.DoctorDepartmentID == 0 ? "Add" : "Edit") DoctorDepartment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="card shadow-sm rounded-3 m-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@(Model.DoctorDepartmentID == 0 ? "Add" : "Edit") DoctorDepartment</h5>
            <a asp-action="DoctorDepartmentList" asp-controller="DoctorDepartment" class="btn btn-light btn-sm">Back to List</a>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="DoctorDepartment" asp-action="DoctorDepartmentAddEdit">
                <input type="hidden" name="DoctorDepartmentID" value="@Model.DoctorDepartmentID" />

                <div class="mb-3">
                    <label class="form-label">Select Doctor</label>
                    <select class="form-select" name="DoctorID" required>
                        <option value="" selected disabled>-- Select Doctor --</option>
                        @if (ViewBag.DoctorList != null)
                        {
                            foreach (dynamic doctor in ViewBag.DoctorList)
                            {
                                <option value="@doctor.DoctorID" selected="@(doctor.DoctorID == Model.DoctorID ? "selected" : null)">
                                    @doctor.DoctorName
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Department</label>
                    <select class="form-select" name="DepartmentID" required>
                        <option value="" selected disabled>-- Select Department --</option>
                        @if (ViewBag.DepartmentList != null)
                        {
                            foreach (dynamic patient in ViewBag.DepartmentList)
                            {
                                <option value="@patient.DepartmentID" selected="@(patient.DepartmentID == Model.DepartmentID ? "selected" : null)">
                                    @patient.DepartmentName
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select User</label>
                    <select class="form-select" name="UserID" required>
                        <option value="" selected disabled>-- Select User --</option>
                        @if (ViewBag.UserList != null)
                        {
                            foreach (dynamic user in ViewBag.UserList)
                            {
                                <option value="@user.UserID" selected="@(user.UserID == Model.UserID ? "selected" : null)">
                                    @user.UserName
                                </option>
                            }
                        }
                    </select>
                </div>


                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>