@model DataRow
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime? created = Model["Created"] != DBNull.Value ? Convert.ToDateTime(Model["Created"]) : (DateTime?)null;
    DateTime? modified = Model["Modified"] != DBNull.Value ? Convert.ToDateTime(Model["Modified"]) : (DateTime?)null;
}
@* CREATE OR ALTER PROC PR_DoctorDepartment_SelectByID
    @DoctorDepartmentID INT
AS
BEGIN
    SELECT DD.DoctorDepartmentID, DD.DoctorID, DD.DepartmentID, DD.Created, DD.Modified,
        D.DoctorName AS DoctorName, Dept.DepartmentName AS DepartmentName, U.UserName AS UserName
    FROM DoctorDepartment AS DD JOIN Doctor AS D
        ON DD.DoctorID = D.DoctorID JOIN Department AS Dept
        ON DD.DepartmentID = Dept.DepartmentID JOIN [User] AS U
        ON DD.UserID = U.UserID
    WHERE DoctorDepartmentID = @DoctorDepartmentID;
END *@
<!DOCTYPE html>
<html>
<head>
    <title>DoctorDepartment Detail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .doctorDepartment-detail-label {
            font-weight: 600;
        }

        .doctorDepartment-detail-value {
            word-break: break-all;
        }

        .status-active {
            color: #198754;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
                <i class="bi bi-journal-text fs-2 me-3"></i>
                <h4 class="mb-0">DoctorDepartment Details</h4>
            </div>
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-hash"></i> DoctorDepartment ID:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">@Model["DoctorDepartmentID"]</dd>

                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-person-gear"></i> Doctor Name:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">@Model["DoctorName"]</dd>


                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-journal-check"></i> Department Name:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">@Model["DepartmentName"]</dd>

                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-person-bounding-box"></i> User Name:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">@Model["UserName"]</dd>

                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-calendar-plus"></i> Created:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">
                        @(created.HasValue? created.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>

                    <dt class="col-sm-3 doctorDepartment-detail-label"><i class="bi bi-calendar-check"></i> Modified:</dt>
                    <dd class="col-sm-9 doctorDepartment-detail-value">
                        @(modified.HasValue? modified.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a class="btn btn-secondary shadow-sm"
                           asp-controller="DoctorDepartment" asp-action="DoctorDepartmentList"
                           title="Back to List">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-primary shadow-sm me-2"
                           asp-controller="DoctorDepartment" asp-action="DoctorDepartmentAddEdit" asp-route-DoctorDepartmentID="@Model["DoctorDepartmentID"]"
                           title="Edit">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                        <a class="btn btn-danger shadow-sm"
                           asp-controller="DoctorDepartment" asp-action="DoctorDepartmentDelete" asp-route-DoctorDepartmentID="@Model["DoctorDepartmentID"]"
                           onclick="return confirm('Are you sure you want to delete this doctorDepartment?');"
                           title="Delete">
                            <i class="bx bx-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>