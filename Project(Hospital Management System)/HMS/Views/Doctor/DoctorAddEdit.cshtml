<!doctype html>  
<html lang="en">  
<head>  
    <meta charset="utf-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <title>@(Model.DoctorID == 0 ? "Add" : "Edit") Doctor</title>  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">  
</head>  
<body>  
    <div class="card shadow-sm rounded-3 m-4">  
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">  
            <h5 class="mb-0">@(Model.DoctorID == 0 ? "Add" : "Edit") Doctor</h5>  
            <a asp-action="DoctorList" asp-controller="Doctor" class="btn btn-light btn-sm">Back to List</a>  
        </div>  
        <div class="card-body">  
            <form method="post" asp-controller="Doctor" asp-action="DoctorAddEdit">  
                <input type="hidden" name="DoctorID" value="@Model.DoctorID" />  

                <div class="mb-3">  
                    <label class="form-label">Doctor Name</label>  
                    <input type="text" class="form-control" name="DoctorName" placeholder="Enter Doctor Name" value="@Model.DoctorName" required />  
                </div>  

                <div class="mb-3">  
                    <label class="form-label">Email</label>  
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email" value="@Model.Email" />  
                </div>  

                <div class="mb-3">  
                    <label class="form-label">Mobile No</label>  
                    <input type="text" class="form-control" name="Phone" placeholder="Enter Mobile Number" value="@Model.Phone" pattern="[0-9]{10}" required />  
                </div>  

                <div class="mb-3">  
                    <label class="form-label">Qualification</label>  
                    <input type="text" class="form-control" name="Qualification" placeholder="Enter Qualification" value="@Model.Qualification" required />  
                </div>  

                <div class="mb-3">  
                    <label class="form-label">Specialization</label>  
                    <input type="text" class="form-control" name="Specialization" placeholder="Enter Specialization" value="@Model.Specialization" required />  
                </div>  

                <div class="mb-3">  
                    <label class="form-label">Select User</label>
                    <select class="form-select" name="UserID" required>
                        <option value="" selected disabled>-- Select User --</option>
                        @if (ViewBag.UserList != null)
                        {
                            foreach (dynamic user in ViewBag.UserList)
                            {
                                <option value="@user.UserID" selected="@(user.UserID == Model.UserID ? "selected" : null)">
                                    @user.UserName
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="form-check mb-3">  
                    <input type="checkbox" class="form-check-input" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />  
                    <label class="form-check-label">Is Active</label>  
                </div>  

                <button type="submit" class="btn btn-success">Save</button>  
            </form>  
        </div>  
    </div>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>  
</body>  
</html>