@model DataRow
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isActive = Model["IsActive"] != DBNull.Value && Convert.ToBoolean(Model["IsActive"]);
    DateTime? created = Model["Created"] != DBNull.Value ? Convert.ToDateTime(Model["Created"]) : (DateTime?)null;
    DateTime? modified = Model["Modified"] != DBNull.Value ? Convert.ToDateTime(Model["Modified"]) : (DateTime?)null;
}
@* CREATE OR ALTER PROC PR_Doctor_SelectByID
    @DoctorID INT
AS
BEGIN
    SELECT D.DoctorName, D.Phone, D.Email, D.Qualification, D.Specialization, D.IsActive, D.Created, D.Modified, U.UserName, U.Email, U.MobileNo
    FROM Doctor AS D JOIN [User] AS U
        ON D.UserID = U.UserID
    WHERE DoctorID = @DoctorID;
END *@
<!DOCTYPE html>
<html>
<head>
    <title>Doctor Detail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .doctor-detail-label {
            font-weight: 600;
        }

        .doctor-detail-value {
            word-break: break-all;
        }

        .status-active {
            color: #198754;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
                <i class="bi bi-person-gear fs-2 me-3"></i>
                <h4 class="mb-0">Doctor Details</h4>
            </div>
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-hash"></i> Doctor ID:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["DoctorID"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-person"></i> Name:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["DoctorName"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-phone"></i> Mobile No:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["Phone"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-envelope"></i> Email:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["Email"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-mortarboard-fill"></i> Qualification:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["Qualification"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-battery-charging"></i> Specialization:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["Specialization"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-person-bounding-box"></i> User Name:</dt>
                    <dd class="col-sm-9 doctor-detail-value">@Model["UserName"]</dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-check-circle"></i> Status:</dt>
                    <dd class="col-sm-9 doctor-detail-value">
                        @if (isActive)
                        {
                            <span class="status-active"><i class="bi bi-toggle-on"></i> Active</span>
                        }
                        else
                        {
                            <span class="status-inactive"><i class="bi bi-toggle-off"></i> Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-calendar-plus"></i> Created:</dt>
                    <dd class="col-sm-9 doctor-detail-value">
                        @(created.HasValue? created.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>

                    <dt class="col-sm-3 doctor-detail-label"><i class="bi bi-calendar-check"></i> Modified:</dt>
                    <dd class="col-sm-9 doctor-detail-value">
                        @(modified.HasValue? modified.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a class="btn btn-secondary shadow-sm"
                           asp-controller="Doctor" asp-action="DoctorList"
                           title="Back to List">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-primary shadow-sm me-2"
                           asp-controller="Doctor" asp-action="DoctorAddEdit" asp-route-DoctorID="@Model["DoctorID"]"
                           title="Edit">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                        <a class="btn btn-danger shadow-sm"
                           asp-controller="Doctor" asp-action="DoctorDelete" asp-route-DoctorID="@Model["DoctorID"]"
                           onclick="return confirm('Are you sure you want to delete this doctor?');"
                           title="Delete">
                            <i class="bx bx-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>