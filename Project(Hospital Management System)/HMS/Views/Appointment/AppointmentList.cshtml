@model DataTable
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @* public int AppointmentID { get; set; }
    public int AppointmentID { get; set; }
    public int PatientID { get; set; }
    public DateTime AppointmentDate { get; set; }
    public string AppointmentStatus { get; set; }
    public string Description { get; set; }
    public string SpecialRemarks { get; set; }
    public DateTime Created { get; set; }
    public DateTime Modified { get; set; }
    public int UserID { get; set; }
    public decimal? TotalConsultedAmount { get; set; } *@

<!DOCTYPE html>
<html>
<head>
    <title>Appointments List</title>
</head>
<body>

    <style>
        .clickable-row {
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            .clickable-row:hover {
                background-color: #f0f9ff !important;
            }
    </style>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">🗓️ Appointments Management</h2>
            <a asp-action="AppointmentAddEdit" asp-controller="Appointment" class="btn btn-success btn-lg shadow-sm">
                <i class="bx bx-plus me-1"></i> Add Appointment
            </a>
        </div>

        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-gradient bg-primary text-white rounded-top-4">
                <h5 class="mb-0"><i class="bx bx-list-ul me-2"></i>Appointments List</h5>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle mb-0 text-center">
                        <thead class="table-light text-dark">
                            <tr>
                                <th>ID</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Rows.Count > 0)
                            {
                                foreach (DataRow row in Model.Rows)
                                {
                                    var appointmentId = row["AppointmentID"];
                                    <tr class="clickable-row"
                                        onclick="window.location.href='@Url.Action("AppointmentDetail", "Appointment", new { AppointmentID = appointmentId })'">
                                        <td>@appointmentId</td>
                                        <td class="text-truncate" style="max-width: 120px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@row["Description"]</td>
                                        
                                        <td>@row["AppointmentStatus"] </td>
                                        <td>@Convert.ToDateTime(row["AppointmentDate"]).ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a class="btn btn-sm btn-info text-white shadow-sm" asp-controller="Appointment" asp-action="AppointmentDetail" asp-route-AppointmentID="@appointmentId"
                                                   title="Details"
                                                   title="View">
                                                    <i class="bx bx-show-alt me-1"></i>View
                                                </a>
                                                <a class="btn btn-sm btn-primary shadow-sm"
                                                   asp-controller="Appointment" asp-action="AppointmentAddEdit" asp-route-AppointmentID="@appointmentId"
                                                   title="Edit">
                                                    <i class="bx bx-edit-alt me-1"></i>Edit
                                                </a>
                                                <a class="btn btn-sm btn-danger shadow-sm"
                                                   asp-controller="Appointment" asp-action="AppointmentDelete" asp-route-AppointmentID="@appointmentId"
                                                   onclick="return confirm('Are you sure you want to delete this appointment?');"
                                                   title="Delete">
                                                    <i class="bx bx-trash me-1"></i>Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-muted text-center py-4">
                                        <i class="bx bx-info-circle me-1"></i> No appointments found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
</html>