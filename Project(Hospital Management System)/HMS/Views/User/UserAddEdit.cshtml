@model HMS.Models.UserModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(Model.UserID == 0 ? "Add" : "Edit") User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="card shadow-sm rounded-3 m-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add/Edit User</h5>
            <a href="/User/UserList" class="btn btn-light btn-sm">Back to List</a>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="UserAddEdit">
                <input type="hidden" name="UserID" value="@Model.UserID" />

                <div class="mb-3">
                    <label class="form-label">User Name</label>
                    <input type="text" class="form-control" name="UserName" placeholder="Enter User Name" value="@Model.UserName" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password" value="@Model.Password" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email" value="@Model.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mobile No</label>
                    <input type="text" class="form-control" name="MobileNo" placeholder="Enter Mobile Number" value="@Model.MobileNo" />
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
                    <label class="form-check-label">Is Active</label>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>