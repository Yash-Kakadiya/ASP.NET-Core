@model DataTable
@using System.Data;
@{
    var row = Model.Rows.Count > 0 ? Model.Rows[0] : null;
    string userId = row?["UserID"]?.ToString();
    string userName = row?["UserName"]?.ToString();
    string password = row?["Password"]?.ToString();
    string email = row?["Email"]?.ToString();
    string mobileNo = row?["MobileNo"]?.ToString();
    bool isActive = row != null && row["IsActive"]?.ToString().ToLower() == "true";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(userId == null ? "Add" : "Edit") User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body>

    <div class="card shadow-sm rounded-3 m-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add/Edit User</h5>
            <a href="/User/UserList" class="btn btn-light btn-sm">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="UserAddEdit">
                <input type="hidden" name="UserID" value="@userId" />

                <div class="mb-3">
                    <label class="form-label">User Name</label>
                    <input type="text" class="form-control" name="UserName" placeholder="Enter User Name" value="@userName" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password" value="@password" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email" value="@email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mobile No</label>
                    <input type="text" class="form-control" name="MobileNo" placeholder="Enter Mobile Number" value="@mobileNo" />
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" name="IsActive" value="true" @(isActive ? "checked" : "") />
                    <label class="form-check-label">Is Active</label>
                </div>


                <button type="submit" class="btn btn-success">
                    <i class="bx bx-save"></i> Save
                </button>
            </form>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>