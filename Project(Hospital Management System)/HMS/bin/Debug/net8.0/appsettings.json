{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // Configuration for the database connection
  "ConnectionStrings": {

    // Connection string for the SQL Server database
    // "MyConnectionString" is the name used to reference this connection in the application
    // "Data Source" specifies the server and instance name
    // "Initial Catalog" specifies the database name
    // "Integrated Security=true" indicates that Windows Authentication is used
    // "Encrypt=false" disables encryption for the connection
    // Note: Ensure that the SQL Server instance is running and accessible
    // Update the connection string as per your SQL Server configuration
    // Example connection string for a local SQL Server instance
    "MyConnectionString": "Data Source=YASH\\SQLEXPRESS;Initial Catalog=HMS_DB;Integrated Security=true;Encrypt=false"
    // Example connection string for a remote SQL Server instance
    // "MyConnectionString": "Data Source=remoteServer;Initial Catalog=HMS_DB;User ID=myUsername;Password=myPassword;Encrypt=false"

  }
}
